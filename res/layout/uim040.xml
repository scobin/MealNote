<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".UIm040" >

    <!-- title bar -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/title_background" >

        <TextView
            android:id="@+id/title_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_ui_meal_top"
            android:textColor="@android:color/white"
            android:textSize="@dimen/word_titlebar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_m040_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_favorite"
        android:clickable="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_m040_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/str_m040_information_list"
                android:textSize="@dimen/word_size_large" />

            <TextView
                android:id="@+id/txt_m040_list_title_jp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_m040_list_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="@string/str_m040_information_list_jp"
                android:textSize="@dimen/word_size_normal" />
            
            <View
                android:layout_width="100px"
                android:layout_height="4px"
                android:layout_alignLeft="@+id/txt_m040_list_title_jp"
                android:layout_alignRight="@+id/txt_m040_list_title_jp"
                android:layout_below="@+id/txt_m040_list_title_jp"
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_m040_data_total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_m040_list_title_jp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/txt_m040_list_title_jp"
                android:gravity="center"
                android:text="@string/str_m000_data_total_number"
                android:textSize="@dimen/word_size_normal" />

            <TextView
                android:id="@+id/txt_m040_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txt_m040_list_title"
                android:layout_marginRight="20dp"
                android:text="@string/str_m040_page"
                android:textSize="@dimen/word_size_normal" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_m040_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp" >

                <TextView
                    android:id="@+id/txt_m040_SRNum_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/img_triangle_green"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/str_m000_number"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/img_m040_SRPic_1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_m040_RInfo1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:text="TextView"
                        android:textSize="@dimen/word_size_normal"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/txt_m040_RInfo2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:text="TextView"
                        android:textSize="@dimen/word_size_normal"
                        android:textStyle="italic" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_m040_RInfo3_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:paddingLeft="2dp"
                            android:text="TextView"
                            android:textSize="@dimen/word_size_normal"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/txt_m050_more_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@color/pink"
                            android:gravity="right"
                            android:paddingRight="5dp"
                            android:text="@string/str_m050_more"
                            android:textColor="@color/mediumslateblue"
                            android:textSize="@dimen/word_size_normal"
                            android:textStyle="italic" />

                    </TableRow>
                </LinearLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/skyblue"
                android:visibility="visible" />

        </LinearLayout>

